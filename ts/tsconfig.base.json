{
    "compilerOptions": {
        "lib": ["esnext", "dom"],
        "target": "es2020",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "dist",
        "rootDirs": ["../src"],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "types": ["node", "jest"],
        "noImplicitAny": false
    },
    "ts-node-dev": {
        "swc": true
    }
}
