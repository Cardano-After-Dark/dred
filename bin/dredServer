init();
async function init() {
    // todo: set up to have discovery details inclusing both servers N1, N2 (init config)
    const discovery = new DevEnvLocalDiscovery({});
    const server = await createServer({ 
        discovery ,
        waitFor: "healthy",
        // connectionSettings: {

        // }
    },discovery.hosts[0].serverId);
    //, 
    // Hack hardcode Node 1, node2
    // discovery.hosts[0].serverId);
    const { port, address } = discovery.hosts[0];
    await server.listen();

    // console.log(`Dred server listening on port ${port}`);
}
