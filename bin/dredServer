import { StaticHostDiscovery } from "../src/peers/StaticHostDiscovery";
import { createServer } from "../src/server/DredServer";
import { asyncDelay } from "../src/util/asyncDelay";

//!!!! todo: read config from a JSON file 

init();
async function init() {
    const discovery = new StaticHostDiscovery({});
    const hosts = discovery.hosts;
    const firstHost = hosts?.[0];
    if (!firstHost) {
        throw new Error("No hosts found");
    }
    console.log("Dred server starting on host", firstHost);
    const server = await createServer({ 
        discovery ,
        waitFor: "healthy",        
        // connectionSettings: {

        // }
    }, firstHost.serverId);
    const { port, address } = firstHost;
    await server.listen();

    // console.log(`Dred server listening on port ${port}`);
}
